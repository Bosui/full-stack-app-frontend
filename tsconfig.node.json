{
  "compilerOptions": {
    "jsx": "react",
    "jsx": "react",
    "jsx": "react",
    "jsx": "react",
    "jsx": "react",
    "composite": true, // Būtina nustatyti, jei failas naudojamas kaip nuoroda
    "module": "CommonJS", // Node.js projektams naudojama CommonJS
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": false, // Būtina išjungti, jei naudojamas composite
    "outDir": "./dist", // Emituojamų failų katalogas
    "target": "ESNext",
    "skipLibCheck": true
  },
  "include": [
    "./"
  ],
  "exclude": [
    "node_modules"
  ]
}